<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <bool name="lightNavEnabled">true</bool>

    <style name="Theme.NoteWakeup" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/colorbgappbar</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:textColor">@color/colortextsecond</item>
        <item name="actionModeBackground">@android:color/holo_orange_light</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colortext</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorbgappbar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">@bool/lightNavEnabled</item>
        <item name="android:navigationBarColor" tools:targetApi="o">@color/colorbgappbar</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">@bool/lightNavEnabled
        </item>
    </style>


    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AlertDialogCustom" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/colorcardview</item>
    </style>

    <style name="MyDarkToolbarStyle" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:itemBackground">@color/colormenu</item>
    </style>

    <style name="ActionModeStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_close_24</item>
    </style>

    <style name="Theme.NoteWakeup.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/splash_bg</item>
        <item name="colorPrimaryDark">@color/colorbgappbar</item>
    </style>

</resources>